<Window x:Class="YASM.Views.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
	Title="YASM.Views" Height="300" Width="300" >
	<StackPanel>
		<ListBox MaxHeight="500" 
			ItemsSource="{Binding Services}"
			SelectedItem="{Binding SelectedService, Mode=TwoWay}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<TextBlock Text="{Binding ServiceName}" />
						<TextBlock Text="{Binding Status}" />
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	<Button VerticalAlignment="Center" Width="75" Margin="10"
	        Content="Test" Command="{Binding TestCommand}"/>
	<TextBlock Text="Loading" Visibility="{Binding IsLoading, Converter={StaticResource visibilityConverter}}"/>
	</StackPanel>
</Window>
<Window x:Class="YASM.Views.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
	Title="YASM.Views" Height="300" Width="300" >
	<StackPanel Margin="10">
		<DataGrid ItemsSource="{Binding Services}" AutoGenerateColumns="False" 
		          CanUserSortColumns="True" CanUserResizeColumns="True"
		          CanUserResizeRows="False" AlternatingRowBackground="Gainsboro"
		          AlternationCount="2" SelectedItem="{Binding SelectedService, Mode=TwoWay}" 
		          IsReadOnly="True" MaxHeight="500"
			>
			<DataGrid.Columns>
				<DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" />
				<DataGridTextColumn Header="Status" Binding="{Binding Status}" />
			</DataGrid.Columns>
		</DataGrid>
	<Button VerticalAlignment="Center" Width="75" Margin="10"
	        Content="Test" Command="{Binding TestCommand}"/>
	<TextBlock Text="Loading" Visibility="{Binding IsLoading, Converter={StaticResource visibilityConverter}}"/>
	<TextBlock DataContext="{Binding SelectedService}" Text="{Binding Description}" TextWrapping="Wrap"/>
	</StackPanel>
</Window>